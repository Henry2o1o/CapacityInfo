<resources>

    <style name="WhiteTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:scrollbarThumbVertical">@color/blue</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="materialAlertDialogTheme">@style/WhiteTheme.AlertDialog</item>
    </style>

    <style name="WhiteTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle.Dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle.Dark</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle.Dark</item>
    </style>

</resources>