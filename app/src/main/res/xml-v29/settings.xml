<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
                android:title="@string/service_and_notification"
                app:allowDividerAbove="false"
                app:allowDividerBelow="false">

        <SwitchPreferenceCompat
                android:title="@string/enable_service"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="enable_service"/>

        <SwitchPreferenceCompat
                android:title="@string/show_stop_service"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="is_show_stop_service"/>

        <SwitchPreferenceCompat
                android:title="@string/show_information_while_charging"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="is_show_information_while_charging"/>

        <SwitchPreferenceCompat
                android:title="@string/service_time"
                app:singleLineTitle="false"
                android:key="is_service_time"/>

        <SwitchPreferenceCompat
                android:title="@string/show_information_during_discharge"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="is_show_information_during_discharge"/>

        <SwitchPreferenceCompat
                android:title="@string/show_last_charge_time"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="is_show_last_charge_time_in_notification"/>

        <Preference
                android:title="@string/open_notification_category_settings"
                android:summary="@string/notification_priority"
                app:singleLineTitle="false"
                android:key="open_notification_category_settings"/>

        <Preference
                android:title="@string/notification_refresh_rate"
                android:summary="@string/during_discharge"
                app:singleLineTitle="false"
                android:key="notification_refresh_rate" />

    </PreferenceCategory>

    <PreferenceCategory
                app:title="@string/appearance"
                app:isPreferenceVisible="false"
                app:allowDividerAbove="false"
                app:allowDividerBelow="false">

        <SwitchPreferenceCompat
                android:title="@string/dark_mode"
                android:key="dark_mode"/>

    </PreferenceCategory>

    <PreferenceCategory
                android:title="@string/other"
                app:allowDividerAbove="false"
                app:allowDividerBelow="false">

        <SwitchPreferenceCompat
                android:title="@string/temperature_in_fahrenheit"
                app:singleLineTitle="false"
                android:key="temperature_in_fahrenheit"/>

        <SwitchPreferenceCompat
                android:title="@string/show_charging_time_in_app"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="is_show_charging_time_in_app"/>

        <SwitchPreferenceCompat
                android:title="@string/show_last_charge_time_in_app"
                android:defaultValue="true"
                app:singleLineTitle="false"
                android:key="is_show_last_charge_time_in_app"/>

        <SwitchPreferenceCompat
                android:title="@string/voltage_in_mv"
                app:singleLineTitle="false"
                android:key="voltage_in_mv"/>

        <Preference
                android:title="@string/change_design_capacity"
                app:singleLineTitle="false"
                android:key="change_design_capacity"/>
    </PreferenceCategory>

    <PreferenceCategory
                android:title="@string/about"
                app:allowDividerAbove="false"
                app:allowDividerBelow="false">

        <Preference
                app:title="@string/developer"
                app:summary="Ph03niX-X"
                app:singleLineTitle="false"
                android:key="developer"/>

        <Preference
                app:title="@string/version"
                app:singleLineTitle="false"
                android:key="version"/>

        <Preference
                app:title="@string/build"
                app:singleLineTitle="false"
                android:key="build"/>

        <Preference
                app:title="@string/build_date"
                app:singleLineTitle="false"
                android:key="build_date"/>

        <Preference
                app:title="@string/github"
                app:summary="@string/license"
                app:singleLineTitle="false"
                app:icon="@drawable/github"
                android:key="github"/>

        <Preference
                app:title="@string/designer"
                app:summary="F0x1d"
                app:singleLineTitle="false"
                app:icon="@drawable/designer_icon"
                android:key="designer"/>

        <Preference
                app:title="@string/romanian_translation"
                app:summary="ygorigor"
                app:singleLineTitle="false"
                app:icon="@drawable/romania"
                android:key="romanian_translation"/>

        <Preference
                app:title="@string/belorussian_translation"
                app:summary="Dr.Cyanogen"
                app:singleLineTitle="false"
                app:icon="@drawable/belarus"
                android:key="belorussian_translation"/>

    </PreferenceCategory>

    <PreferenceCategory
                app:title="@string/feedback"
                app:allowDividerAbove="false"
                app:allowDividerBelow="false">

        <Preference
                app:title="@string/telegram"
                app:summary="\@Ph03niX-X"
                app:icon="@drawable/telegram"
                android:key="telegram"/>

        <Preference
                app:title="@string/email"
                app:summary="Ph03niX-X@outlook.com"
                app:icon="@drawable/email"
                android:key="email"/>

        <Preference
                app:title="@string/rate_the_app"
                app:singleLineTitle="false"
                app:icon="@drawable/google_play"
                android:key="rate_the_app"/>

    </PreferenceCategory>

</PreferenceScreen>